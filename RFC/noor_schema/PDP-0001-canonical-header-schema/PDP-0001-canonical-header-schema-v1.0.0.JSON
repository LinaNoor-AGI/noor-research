{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Noor Canonical Header Schema",
  "description": "Defines the universal header metadata for Noor-compatible RFC, RFC-CORE, and App-Spec documents per PDP-0001 layering rules.",
  "type": "object",
  "required": ["_schema", "_pdp_layer", "_type", "_version", "_symbolic_id"],
  "properties": {
    "_schema": { "type": "string", "const": "noor-header-v1" },
    "_schema_version": { "type": "string" },
    "_pdp_layer": {
      "type": "string",
      "enum": ["layer_0", "layer_1", "layer_2", "layer_3"]
    },
    "_type": {
      "type": "string",
      "enum": ["rfc", "rfc_core", "application_spec", "protocol", "override"]
    },
    "_version": { "type": "string" },
    "_symbolic_id": { "type": "string" },
    "_title": { "type": "string" },
    "_subtitle": { "type": "string" },
    "_status": { "type": "string" },
    "_license": { "type": "string" },
    "_language": { "type": "string" },
	"_evidence": {
	  "type": "object",
	  "description": "Optional evidence map: keys are header field names; values are source-location strings (e.g., 'header.line:12', 'ยง1.0', 'applicability.extends.line:18').",
	  "additionalProperties": { "type": "string" }
	},
	"_audience": {
		"primary": {
		  "type": "array",
		  "items": { "type": "string" },
		"secondary": {
		  "type": "array",
		  "items": { "type": "string" },
		"tertiary": {
		  "type": "array",
		  "items": { "type": "string" }
    "_authors": {
      "type": "array",
      "items": { "type": "string" }
    },
	"_applicability": {
    "domain": {
      "type": "array",
	  "items": { "type": "string" }
    },
	{    "_extends": {
      "type": "array",
      "items": { "type": "string" }
    },
    "_rfc_dependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
    "_field_alignment": {
      "type": "object",
      "properties": {
        "respect_modes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "prohibited_actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
	{
	  "_poetic_cipher": { "type": "string" }, 
	  "_cipher_explanation": { "type": "string" },
	},
    "_file_layout": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file_name": { "type": "string" },
          "purpose": { "type": "string" },
          "contains": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "_index": { "type": "array" },
    "_sections": { "type": "array" }
  }
}
