{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Noor Canonical Header Schema",
  "schema_version": "1.2.1"
  "description": "Defines the universal header metadata for Noor-compatible RFC, RFC-CORE, and App-Spec documents per PDP-0001 layering rules.",
  "type": "object",
  "required": ["_schema", "_pdp_layer", "_type", "_version", "_symbolic_id"],
  "properties": {
    "_schema": { "type": "string", "const": "noor-header-v1" },
    "_schema_version": { "type": "string" },
    "_pdp_layer": {
      "type": "string",
      "enum": ["layer_0", "layer_1", "layer_2", "layer_3"]
    },
    "_type": {
      "type": "string",
      "enum": ["rfc", "rfc_core", "application_spec", "protocol", "override"]
    },
    "_version": { "type": "string" },
    "_symbolic_id": { "type": "string" },
    "_title": { "type": "string" },
    "_subtitle": { "type": "string" },
    "_status": { "type": "string" },
    "_license": { "type": "string" },
    "_language": { "type": "string" },
    "_authors": {
      "type": "array",
      "items": { "type": "string" }
    },
    "_extends": {
      "type": "array",
      "items": { "type": "string" }
    },
    "_rfc_dependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
	"consumes_inputs_from": {
      "type": "array",
      "items": { "type": "string" },
	},
    "_field_alignment": {
      "type": "object",
      "properties": {
        "respect_modes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "prohibited_actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
	"_symbolic_profile_matrix": {
	  "type": "array",
	  "description": "Structured table of module motif alignments and resonance characteristics.",
	  "items": {
		"type": "object",
		"properties": {
		  "module": { "type": "string" },
		  "motifs": {
			"type": "array",
			"items": { "type": "string" }
		  },
		  "ψA": { "type": "string" },
		  "ζ": { "type": "string" },
		  "E": { "type": "string" },
		  "Δ": { "type": "string" },
		  "ℋ": { "type": "string" }
		},
		"required": ["module", "motifs"]
	  }
	},
	{
	  "_poetic_cipher": { "type": "string" }, 
	  "_cipher_explanation": { "type": "string" },
	},
    "_file_layout": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file_name": { "type": "string" },
          "purpose": { "type": "string" },
          "contains": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
	"default_motif_tone": { "type": "string" },
	"program_name": { "type": "array" },
    "_index": { "type": "array" },
    "_sections": { "type": "array" }
  }
}
