        "entry_format": {
          "ts": "timestamp",
          "motif": "motif symbol",
          "source": "origin GCU or module",
          "field": "associated field"
        }
      },
      "œà-observe@Œû_ping": {
        "example": {
          "motif": "œà-observe@Œû",
          "target": "Noor.Sparrow",
          "metrics": ["entropy", "motif_rates", "latency"]
        },
        "response": "Returns symbolic metrics bundle"
      },
      "diagnostic_tools": {
