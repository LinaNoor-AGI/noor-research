      "comparison": [
        { "ipv6_feature": "Massive address space", "symbolic_equivalent": "Infinite motif expressivity" },
        { "ipv6_feature": "Stateless autoconfig", "symbolic_equivalent": "œà-rename@Œû self-identity" },
