        },
        "œà-quarantine@Œû": {
          "symbol": "üö´ + ü™∑",
          "meaning": "Isolated due to incoherent/malicious echoes"
        }
      }
    },
    "5.3": {
      "title": "Failure Signaling Protocols",
      "œà-degraded@Œû": {
        "triggers": [
          "Unreachable module (via ESB)",
          "Motif voting quorum failure (via PCU)"
        ],
        "type": "warning",
        "example": {
          "motif": "œà-degraded@Œû",
          "source": "Noor.Sparrow",
